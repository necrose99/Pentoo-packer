         ],
         "boot_wait":"5s",
         "disk_size": "{{user `disk_size`}}",
         "format":"qcow2",
         "accelerator":"kvm",
         "disk_interface":"ide",
         "headless": true,
         "iso_url":"http://www.pentoo.ch/isos/Pentoo_amd64_default/pentoo-amd64-default-2015.0_RC3.8.iso{{user `build_type`}}/Sabayon_Linux_{{user `build`}}_{{user `arch`}}_{{user `flavor`}}.iso",
         "iso_checksum_type":"none",
         "shutdown_command":"shutdown -hP now",
         "ssh_password":"{{user `root_password`}}",
         "ssh_username":"{{user `root_username`}}",
         "ssh_wait_timeout":"20s",
         "vm_name":"pentoo QEMU x64",
         "qemuargs":[ 
            [
               "-m",
               "1024M"
            ]
         ]
      }
   ],
   "description":"pentoo x64",
   "post-processors":[
      {
            "output":"pentoo_Linux_{{user `build`}}_{{user `arch`}}_{{user `flavor`}}.box",
            "type":"vagrant",
	    "only":[
	            "virtualbox-iso"
            ]
      },
      {
         "type":"compress",
         "output":"Pentoo_Linux_{{user `build`}}_{{user `arch`}}_{{user `flavor`}}-vmware.tar.gz",
         "only":[
            "vmware-iso"
         ]
      },
      {
         "type":"compress",
         "output":"Pentoo_Linux_{{user `build`}}_{{user `arch`}}_{{user `flavor`}}-ovf.tar.gz",
         "only":[
            "virtualbox-iso"
         ]
      },
      {
         "type":"compress",
         "output":"Pentoo_Linux_{{user `build`}}_{{user `arch`}}_{{user `flavor`}}-qemu.tar.gz",
         "only":[
            "qemu"
         ]
      }
   ],
   "provisioners":[
      {
         "destination":"/tmp",
         "source":"scripts",
         "type":"file"
      },
      {
         "environment_vars":[
            "SCRIPTS=/tmp",
            "VAGRANT={{user `vagrant`}}",
            "GUEST_ADDITIONS={{user `guest_additions`}}"
         ],
         "scripts":[
            "provision.sh"
         ],
         "type":"shell"
      }
   ],
   "variables":{
      "root_username":"root",
      "root_password":"root",
      "build":"default-2015.0_RC3.8", # Pentoo_amd64_default/pentoo-amd64-default-2015.0_RC3.8.iso
      "build_type":"default-2015.0_RC3.8",
      "arch":"amd64",
      "disk_size":"60000",
      "vagrant":"",
      "guest_additions": "",
     }
}
